<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.locations.filter.LocationFilter">

    <TextView
        android:id="@+id/txt"
        android:text="Введите название локации"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_search_name"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt2"
        android:text="Введите тип локации"
        app:layout_constraintTop_toBottomOf="@id/et_search_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_search_type"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt3"
        android:text="Введите измерение"
        app:layout_constraintTop_toBottomOf="@id/et_search_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_search_dimension"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/save"
        android:layout_width="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_dimension"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_save_24"/>

    <ImageView
        android:id="@+id/reset"
        android:layout_width="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_dimension"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_refresh_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>